<resources>

    <!-- Base application theme. -->

    <!-- Light mode -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/textArea</item>
        <item name="colorAccent">@color/happyButton</item>
        <item name="backgroundColor">#FAFAFA</item>
        <item name="cardBackgroundColor">@color/cardViewColor</item>
        <item name="cardSettingsBackgroundColor">@color/settingsCardView</item>
        <item name="textColor">@color/cardViewDarkColor</item>
        <item name="commentColor">@color/commentColor</item>
        <item name="textAreaColor">@color/white</item>
    </style>


    <!-- Light mode -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/happyButton</item>
        <item name="backgroundColor">@color/black</item>
        <item name="cardBackgroundColor">@color/cardViewDarkColor</item>
        <item name="cardSettingsBackgroundColor">@color/cardViewDarkColor</item>
        <item name="textColor">@color/textDarkColor</item>
        <item name="commentColor">@color/commentDarkColor</item>
        <item name="textAreaColor">@color/commentDarkColor</item>
    </style>

</resources>
